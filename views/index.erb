
<div id="flash">
  <%= flash[:notice] %>
</div>
<div id="sudoku">
   <form action="/" method="post">
  <!-- one div for each row -->
  <div class="border-box">
    <% 3.times do |row| %>
      <div class='row'>
          <!-- we want to create separate div elements for boxes to style them using CSS -->
        <% 3.times do |box| %>
            <div class="box">
           <!-- each box will have nine cells -->
           <% 3.times do |cell_row| %>
                <div class="cell-row">
               <% 3.times do |cell| %>


                    <div class="cell">


                     <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>

                    </div>

                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <button name="button" value="method_check">Check solution</button>
    <button name="easy" value="method_easy">Easy sudoku</button>
    <button name="easy" value="method_hard">Hard sudoku</button>
    <button name="restart" value="method_restart">Restart</button>
    <button name="save_start" value="method_save_start">Save game</button>
    </form>

  </div>
